


<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
            aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
            aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
            aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active" style="height: 300px;">
            <img src="img/slide1.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item" style="height: 300px;">
            <img src="img/slide2.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block" style="color: cornsilk;" >
                <h5>It's your time</h5>
                <p>Grab your recipe and make your hands wet.</p>
            </div>
        </div>
        <div class="carousel-item" style="height: 300px;">
            <img src="img/slide3.jpg" class="d-block w-100" alt="...">
            

        </div>
    </div>

</div>


<!--categories -->

<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
    <% if(categories !=''){ %>
        <% categories.forEach((cat,i)=>{ %>
    <a href="/category/<%- cat.name %>" class="col text-center category__link" >
        <div class="category__img shadow">
            <img src="img/<%- cat.image %>" alt="<%- cat.name %>" loading="lazy" >
        </div>
        <div class="pt-1"><%- cat.name %></div>
    </a>
    <% }) %>
    <% }%>



    <a href="/categories" class="col text-center category__link" >
        <div class="category__img shadow">
            <img src="img/view-all.jpg" alt="American food" loading="lazy" >
        </div>
        <div class="pt-1">View All</div>
    </a>

    


</div>

<!--categories -->

<!--Latest-->

<section class="pb-4 pt-4" >
    <div class="d-flex mb-2 align-items-center">
        <h2>Latest Recipes</h2>
        <!-- <a href="/explore-Latest" class="ms-auto">View More</a> -->
    </div>

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        <% if(latestRecipe!=''){ %>
            <% latestRecipe.forEach((rep,i)=>{ %>
                <a href="/recipe/<%- rep.id %>" class="col text-center category__link"> 
                    <div class="category__img category__img--large shadow">
                        <img src="/uploads/<%= rep.image %>" alt="<%- rep.name %>" loading="lazy" >
                    </div>
                    <div class="pt-1"><%- rep.name %></div>
                </a>
            <% }) %>
        <% } %>



        
    </div>

</section>


